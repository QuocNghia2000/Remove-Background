<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#5a000000" android:endColor="#78000000" android:angle="270" android:gradientRadius="15dp"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ff6d7171" android:endColor="#ff2f3235" android:angle="270" android:gradientRadius="15dp"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
</layer-list>
