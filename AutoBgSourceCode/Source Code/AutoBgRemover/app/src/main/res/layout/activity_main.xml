<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:ads="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent">

        <androidx.cardview.widget.CardView
            ads:cardElevation="10dp"
            android:id="@+id/cardView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/imageviewPager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:weightSum="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="110.dip"
            android:layout_width="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <androidx.cardview.widget.CardView
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:background="@drawable/start"
                        android:id="@+id/start"
                        android:layout_height="35.dip"
                        android:layout_width="35.dip"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/start_text"
                    android:textColor="#000000"
                    android:textSize="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="Eraser" />


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent">


                <androidx.cardview.widget.CardView
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:background="@drawable/editor"
                        android:id="@+id/editor"
                        android:layout_height="35.dip"
                        android:layout_width="35.dip"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/editor_text"
                    android:textColor="#000000"
                    android:textSize="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="Editor" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent">


                <androidx.cardview.widget.CardView
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:background="@drawable/folder"
                        android:id="@+id/folder"
                        android:layout_height="35.dip"
                        android:layout_width="35.dip"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/folder_text"
                    android:textColor="#000000"
                    android:textSize="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="My Creation" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="90.dip"
            android:layout_width="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <androidx.cardview.widget.CardView
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:background="@drawable/share_app"
                        android:id="@+id/share_app"
                        android:layout_height="35.dip"
                        android:layout_width="35.dip"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:textColor="#000000"
                    android:textSize="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="Share App" />


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent">


                <androidx.cardview.widget.CardView
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:background="@drawable/rate_app"
                        android:id="@+id/rate_app"
                        android:layout_height="35.dip"
                        android:layout_width="35.dip"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:textColor="#000000"
                    android:textSize="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="Rate App" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/adContainer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</LinearLayout>